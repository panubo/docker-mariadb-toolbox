#!/usr/bin/env bash
#
# This script displays the help message, which lists the available commands.
#

set -e

[ "$DEBUG" == 'true' ] && set -x

cat << EOF

  Please choose a command:

     backup <databases>

     check <databases>

     convert-to-innodb <databases>

     copy-database <source> <destination>

     create-user-db <username> <password>

     import - import dumps

     load - load database

     mysql - start a MySQL client session

     save - save databases

EOF
