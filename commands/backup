#!/usr/bin/env bash

set -e -o pipefail

[ "$DEBUG" == 'true' ] && set -x

if [ -z "$BACKUP_DIR" ]; then
    echo "BACKUP_DIR not set"
    exit 128
fi

MYCONN="--user=${DATABASE_USER-root} --password=${DATABASE_PASS-${MARIADB_ENV_MYSQL_ROOT_PASSWORD}} --host=${DATABASE_HOST-${MARIADB_PORT_3306_TCP_ADDR-localhost}} --port=${MARIADB_PORT_3306_TCP_PORT-${DATABASE_PORT-3306}}"
MYSQL="mysql ${MYCONN}"
GZIP="gzip --fast"
MYDUMP="mysqldump ${MYCONN}"
BACKUP_PATH="${BACKUP_DIR}/$(date +%Y%m%d%H%M)"
RETENTION_DAYS=${RETENTION_DAYS-14}

if [ -z "$1" ]; then
    DATABASES=$($MYSQL -rs -e "SHOW DATABASES" | grep -v -E '(information_schema|performance_schema)')
else
    DATABASES=$@
fi

# Perform the backup
mkdir -p "$BACKUP_PATH"
echo -n "Dumping..."
for DB in $DATABASES; do
    echo -n " $DB"
    $MYDUMP --opt --single-transaction --flush-logs --events --databases ${DB} | $GZIP > "${BACKUP_PATH}/${DB}.sql.gz"
done
echo ". Done."

# Delete expired backups
echo -n "Cleanup... "
find ${BACKUP_DIR} -name "*.sql.gz" -mtime +$RETENTION_DAYS -exec rm -f {} \;
find ${BACKUP_DIR} -type d -empty -delete
echo "Done."
